RewriteEngine On

RewriteRule     ^/?$            views/pages/index.php                       [L,NC]
RewriteRule     ^create/?$      app/linky.php?action=create                 [L,NC]
RewriteRule     ^([^/\.]+)/?$   app/linky.php?action=redirect&uri=$1        [L,NC]